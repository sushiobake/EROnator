// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Works: 作品データ
model Work {
  id                  String   @id @default(cuid())
  workId              String   @unique // 内部ID（stable、content_id）
  title               String
  authorName          String
  isAi                String   // "AI" | "HAND" | "UNKNOWN"
  popularityBase      Float    @default(0) // 0..55 target
  popularityPlayBonus Float    @default(0)
  reviewCount         Int?
  reviewAverage       Float?
  productUrl          String   // 必須（通常URL）
  affiliateUrl        String?  // アフィリエイトリンク（API取得時はaffiliateURLを保存）
  thumbnailUrl        String?  // オプション（公式サムネURL）
  sourcePayload       String?  @default("{}") // JSON string (optional)
  // API取得情報
  contentId           String?  // content_id（workIdと同じ値だが、明示的に保存）
  releaseDate         String?  // 発売日（date）
  pageCount           String?  // ページ数（volume）
  seriesInfo          String?  // シリーズ情報（JSON string、最初の1つのみ）
  // スクレイピング情報
  commentText         String?  // 作品コメント（null=未取得）
  // 管理フラグ
  needsReview         Boolean  @default(false) // 要注意フラグ（手動管理用）
  tagSource           String?  // "human" | "ai" | null（人力タグ付け=human / AI再分析=ai / 未タグ=null）
  aiAnalyzed          Boolean  @default(false) // AI（または別AI）が分析・タグ付けした
  humanChecked        Boolean  @default(false) // 人間がタグ付けまたは承認した→チェック済み
  gameRegistered      Boolean  @default(false) // ゲーム・シミュレーションで使用する作品（エロネーター登録）
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Relations
  workTags WorkTag[]

  @@index([workId])
  @@index([isAi])
  @@index([needsReview])
  @@index([gameRegistered])
  @@index([tagSource])
  @@index([aiAnalyzed])
  @@index([humanChecked])
}

// Tags: タグデータ
model Tag {
  id                String   @id @default(cuid())
  tagKey            String   @unique // stable key
  displayName       String
  tagType           String   // "OFFICIAL" | "DERIVED" | "STRUCTURAL"
  category          String?  // nullable
  questionTemplate  String?  // 質問テンプレート（nullable、タグ＆質問リストで編集可）
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  workTags WorkTag[]

  @@index([tagKey])
  @@index([tagType])
}

// WorkTags: 作品-タグの多対多関係
model WorkTag {
  id                String   @id @default(cuid())
  workId            String
  tagKey            String
  derivedConfidence Float?   // nullable (DERIVEDタグのみ)
  derivedSource     String?  // "matched" or "suggested" (DERIVEDタグのみ)
  createdAt         DateTime @default(now())

  // Relations
  work Work @relation(fields: [workId], references: [workId], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagKey], references: [tagKey], onDelete: Cascade)

  @@unique([workId, tagKey])
  @@index([workId])
  @@index([tagKey])
}

// Sessions: ゲームセッション状態
model Session {
  id                      String   @id @default(cuid())
  sessionId               String   @unique
  aiGateChoice            String?  // "YES" | "NO" | "DONT_CARE" | null
  questionCount           Int      @default(0)
  revealMissCount         Int      @default(0)
  revealRejectedWorkIds    String   @default("[]") // JSON array string
  weights                 String   @default("{}") // JSON object: { workId: weight }
  weightsHistory          String   @default("[]") // JSON array: [{ qIndex, weights }] (修正機能用)
  questionHistory         String   @default("[]") // JSON array
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@index([sessionId])
}

// Logs: FAIL_LISTの自由入力保存
model Log {
  id                String   @id @default(cuid())
  submittedTitleText String
  aiGateChoice      String?  // "YES" | "NO" | "DONT_CARE"
  topCandidates     String?  @default("[]") // JSON array (optional snapshot)
  timestamp         DateTime @default(now())
  createdAt         DateTime @default(now())

  @@index([timestamp])
}
